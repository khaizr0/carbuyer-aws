# AWS Production Environment

# Server Configuration
PORT=3000
BASE_URL=https://your-domain.com
SESSION_SECRET=your_strong_session_secret_here

# AWS DynamoDB (không cần endpoint, dùng AWS thực)
AWS_REGION=ap-southeast-1
# Nếu dùng IAM role trên EC2/Lightsail thì không cần 2 dòng dưới
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# AWS S3 + CloudFront (không cần endpoint, dùng AWS thực)
S3_REGION=ap-southeast-1
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_BUCKET=carbuyer-production
# Dùng CloudFront URL thay vì S3 direct
S3_PUBLIC_URL=https://d1234567890.cloudfront.net

# JWT Configuration
JWT_SECRET=your_jwt_secret_production

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Google Maps Configuration
GOOGLE_MAPS_EMBED_URL=your_google_maps_embed_url

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH_USERS=Public/images/Database/Users/
UPLOAD_PATH_PRODUCTS=Public/images/Database/Products/

# Redis (Optional - nếu dùng ElastiCache)
# REDIS_HOST=your-redis.cache.amazonaws.com
# REDIS_PORT=6379
