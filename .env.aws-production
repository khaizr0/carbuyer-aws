# AWS Production Environment

# Server Configuration
PORT=3000
BASE_URL=https://your-domain.com
SESSION_SECRET=your_strong_session_secret_here

# AWS Configuration (DynamoDB + S3)
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# S3 + CloudFront
S3_BUCKET=carbuyer-production
S3_PUBLIC_URL=https://yourid.cloudfront.net

# JWT Configuration
JWT_SECRET=your_jwt_secret_production

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Google Maps Configuration
GOOGLE_MAPS_EMBED_URL=your_google_maps_embed_url

# Redis (Optional - nếu dùng ElastiCache)
